<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: 'Compose new micropost...', onkeyup: "updateCounter(this)" %>
  </div>
  <div>
    <%= f.submit 'Post', class: 'btn btn-large btn-primary' %>
    <span class="badge badge-info" id="micropost_counter">140</span>
  </div>
<% end %>
